PHP_FPM_PORT=9000

##########################################
# NGINX Configuration
##########################################
NGINX_IMG=nginx	
NGINX_CONTAINER=Nginx

SSL_KEY=/home/sthiagar/inception/secrets/nginx.key
SSL_CERT=/home/sthiagar/inception/secrets/nginx.crt

